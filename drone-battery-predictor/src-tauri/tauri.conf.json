{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "identifier": "com.drone.predictor",
  "productName": "drone-battery-predictor",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "https://192.168.1.114:3000",
    "frontendDist": "../dist"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "title": "drone-battery-predictor",
        "width": 1280,
        "height": 800,
        "resizable": true
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": ["deb", "appimage", "msi", "dmg"],
    "icon": [
      "icons/icon.ico",
      "icons/128x128.png",
      "icons/256x256.png",
      "icons/512x512.png"
    ]
  }
}
